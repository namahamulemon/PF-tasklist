<!--管理者ログイン登録画面-->
<div class="container">
  <div class="row">
        <div class="col-sm-3"></div>
    <div class="mt-5 col-sm-5">
       <h3><strong>管理者Log in</strong></h3>
    </div>
  </div>

<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

     <div class="field row mt-5 mx-auto">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
        <small><%= f.label :email, "email" %></small>
        </div>
        <div class="field col-sm-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"emailアドレスを入力してください", class: "form-control-sm" %>
        </div>
     </div>

     <div class="field row mt-2 mx-auto">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
        <small><%= f.label :password, "パスワード" %></small>
        </div>
        <div class="col-sm-2">
         <%= f.password_field :password, autocomplete: "current-password", class: "form-control-sm" %>
        </div>
     </div>

     <div class="form-group row mt-5">
      <div class="col-sm-3"></div>
       <div class="col-sm-1">
        <%= f.submit 'Log in', class:"btn btn-primary btn-md btn-block" %>
    <% end %>
       </div>
      </div>
     </div>

     <div class="form-group row mt-1">
         <div class="col-sm-4"></div>
       <div class="col-sm-2">
<%#= render "admins/shared/links" %>
       </div>
     </div>
</div>