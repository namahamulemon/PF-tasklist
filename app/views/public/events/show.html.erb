  <!--ヘッダー-->
<%= render 'public/header' %>

<div class="container">
  <div class="form-group row mt-5">
    <div class="col-sm-3">
      <big class="bg-light"><strong>タスク詳細</strong></big>
    </div>
    </div>
  </div>


<p id="notice"><%= notice %></p>

<div class="container">
  <div class="form-group row mt-5">
    <div class="col-sm-2">
      <strong>タスクタイトル</strong>
     </div>
     <div class="col-sm-10">
      <%= @event.title %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
  <strong>タスク内容</strong>
     </div>
     <div class="col-sm-10">
  <%= @event.content %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
  <strong>日時</strong>
     </div>
     <div class="col-sm-10">
  <%= @event.start_time %>
  <%#= @event.start_time.strftime("%m-%d") %>
    </div>
  </div>

<% if @event.user == current_user %>
<div class="form-group row">
<div class="col-sm-1"><%= link_to '編集', edit_event_path(@event), class:"btn text-white bg-primary" %></div>
<div class="col-sm-1"><%= link_to '消去', event_path(@event.id), method: :delete, class:"btn text-white bg-danger", data: { confirm: '本当に?' } %></div>
<div class="col-sm-1"><%= link_to '戻る', events_path, class:"btn text-white bg-info" %></div>
</div>
<% else %>
<td></td>
<td></td>
<div class="col-sm-1"><%= link_to '戻る', events_path, class:"btn text-white bg-info" %></div>
<% end %>
</div>
</div>