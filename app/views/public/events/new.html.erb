<!--ヘッダー-->
<%= render 'public/header' %>

<div class="container">
  <div class="form-group row mt-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <big class="bg-light"><strong>タスク投稿</strong></big>
    </div>
    </div>
  </div>

<%= form_with model: @event, url: events_path, local:true do |f| %>

<div class="container">
  <div class="form-group row mt-5">
    <div class="title col-sm-2">
      <strong><%= f.label :title, "タイトル" %></strong>
     </div>
     <div class="col-sm-4">
      <%= f.text_field :title, placeholder:"タイトルを入力してください", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <div class="title col-sm-2">
      <strong><%= f.label :start_time, "開始時間ー終了時間" %></strong>
     </div>
     <div class="col-sm-10">
      <%= f.datetime_select :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <div class="title col-sm-2">
      <strong><%= f.label :content, "タスク内容" %></strong>
     </div>
     <div class="col-sm-4">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>

<div class="form-group row mt-5">
    <div class="col-sm-2"></div>
  <div class="submit col-sm-2">
    <%= f.submit '登録', class:"btn btn-success btn-md btn-block" %>
  </div>
</div>
</div>

<% end %>